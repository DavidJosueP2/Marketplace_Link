	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-login si no hay token o si el token está expirado",
					"const token = pm.environment.get('jwt_token');",
					"const email = pm.environment.get('USER_EMAIL') || 'test@example.com';",
					"const password = pm.environment.get('USER_PASSWORD') || 'password123';",
					"",
					"// Si no hay token, hacer login automático",
					"if (!token) {",
					"    const loginRequest = {",
					"        url: pm.environment.get('BASE_URL') + '/api/auth/login',",
					"        method: 'POST',",
					"        header: {",
					"            'Content-Type': 'application/json'",
					"        },",
					"        body: {",
					"            mode: 'raw',",
					"            raw: JSON.stringify({",
					"                email: email,",
					"                password: password",
					"            })",
					"        }",
					"    };",
					"    ",
					"    pm.sendRequest(loginRequest, function (err, response) {",
					"        if (!err && response.code === 200) {",
					"            const jsonData = response.json();",
					"            if (jsonData.token) {",
					"                pm.environment.set('jwt_token', jsonData.token);",
					"                console.log('Token JWT obtenido automáticamente');",
					"            }",
					"        }",
					"    });",
					"}"
				]
			}
		}
