DB_HOST_TEST=mplink-postgres-test
DB_PORT_TEST=5432
DB_NAME_TEST=marketplace_test_db
DB_USER_TEST=postgres
DB_PASSWORD_TEST=admin

# ============================================================================
# SERVIDOR
# ============================================================================
SERVER_PORT=8080

# ============================================================================
# CORREO ELECTRÓNICO (SMTP)
# ============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ============================================================================
# FRONTEND
# ============================================================================
# Puedes agregar múltiples orígenes separados por coma
FRONTEND_URL=http://localhost:5174,http://localhost:80,http://localhost

# ============================================================================
# CONFIGURACIÓN DE NEGOCIO
# ============================================================================
SUSPENDED_TIME_DAYS=30
MODERATOR_DEFAULT_PASSWORD=SecretPasswordM123

