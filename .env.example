# ============================================================================
# BASE DE DATOS - Para Docker Compose
# ============================================================================
# Usar nombres de contenedor cuando se ejecuta dentro de Docker
DB_HOST=mplink-postgres
DB_PORT=5432
DB_NAME=marketplace_db
DB_USER=postgres
DB_PASSWORD=admin

# ============================================================================
# BASE DE DATOS - Testing
# ============================================================================
